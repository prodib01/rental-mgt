@model RentalManagementSystem.ViewModels.LandlordDashboardViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Landlord Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        :root {
            --primary-color: #4f46e5;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --info-color: #0ea5e9;
            --sidebar-width: 250px;
            --sidebar-collapsed-width: 80px;
        }

        body {
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            background-color: #f8fafc;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        #wrapper {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar Styles */
        #sidebar {
            width: var(--sidebar-width);
            background: #1e293b;
            color: white;
            transition: all 0.3s ease;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            z-index: 1000;
            overflow-y: auto;
        }

        #sidebar.collapsed {
            width: var(--sidebar-collapsed-width);
        }

        #sidebar.collapsed .sidebar-header span {
            display: none;
        }

        .sidebar-header {
            padding: 20px;
            background: #0f172a;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .sidebar-header h3 {
            color: white;
            margin: 0;
            font-size: 1.25rem;
        }

        #sidebar ul.components {
            padding: 20px 0;
        }

        #sidebar ul li a {
            padding: 15px 20px;
            display: flex;
            align-items: center;
            color: #e2e8f0;
            text-decoration: none;
            transition: all 0.3s ease;
            position: relative;
        }

        #sidebar ul li a::after {
            content: '';
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 4px;
            height: 0;
            background: var(--primary-color);
            transition: height 0.3s ease;
        }

        #sidebar ul li a:hover::after {
            height: 70%;
        }

        #sidebar ul li a:hover {
            background: #334155;
        }

        #sidebar ul li.active>a {
            background: var(--primary-color);
        }

        #sidebar ul li i {
            margin-right: 10px;
            width: 20px;
            text-align: center;
        }

        /* Content Area */
        #content {
            flex: 1;
            margin-left: var(--sidebar-width);
            padding: 20px;
            transition: all 0.3s ease;
            width: calc(100% - var(--sidebar-width));
        }

        #content.expanded {
            margin-left: var(--sidebar-collapsed-width);
            width: calc(100% - var(--sidebar-collapsed-width));
        }

        /* Dashboard Cards */
        .dashboard-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 100%;
            border: 1px solid rgba(0, 0, 0, 0.05);
        }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
        }

        .metric-card {
            padding: 1.5rem;
            position: relative;
            overflow: hidden;
        }

        .metric-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: rgba(255, 255, 255, 0.1);
            transform: rotate(45deg);
        }

        /* Responsive Adjustments */
        @@media (max-width: 768px) {
            #sidebar {
                width: 250px;
                margin-left: -250px;
            }

            #sidebar.active {
                margin-left: 0;
            }

            #content {
                margin-left: 0;
                width: 100%;
            }

            #content.expanded {
                margin-left: 0;
            }
        }
    </style>
</head>

<body>
    <div id="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3 class="text-center">RMS</h3>
            </div>

            <ul class="list-unstyled components">
                <li class="active">
                    <a href="/Landlord/Dashboard">
                        <i class="fas fa-home"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a href="/Landlord/Property">
                        <i class="fas fa-building"></i>
                        <span>Properties</span>
                    </a>
                </li>
                <li>
                <a href="/Landlord/House">
                <i class="fas fa-house"></i>
                <span>Houses</span>
                </a>
                </li>
                <li>
                    <a href="/Landlord/Tenants">
                        <i class="fas fa-users"></i>
                        <span>Tenants</span>
                    </a>
                </li>
                                <li>
                    <a href="/Landlord/Leases">
                        <i class="fas fa-file-contract"></i>
                        <span>Leases</span>
                    </a>
                </li>
                                <li>
                    <a href="/Landlord/Payments">
                        <i class="fas fa-dollar-sign"></i>
                        <span>Payments</span>
                    </a>
                </li>
                                <li>
                    <a href="/Landlord/Utility">
                        <i class="fas fa-dollar-sign"></i>
                        <span>Utilities</span>
                    </a>
                </li>
                <li>
                    <a href="/Landlord/Request">
                        <i class="fas fa-tools"></i>
                        <span>Requests</span>
                    </a>
                </li>
                <li>
                    <a href="/Landlord/Reports">
                        <i class="fas fa-chart-bar"></i>
                        <span>Reports</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Content -->
        <div id="content">
            <div class="container-fluid">
                <!-- Metrics Row -->
                <div class="row g-4 mb-4">
                    <div class="col-md-3">
                        <div class="dashboard-card metric-card bg-primary text-white">
                            <h6 class="card-title">Total Houses</h6>
                            <h2 class="card-text">@Model.TotalProperties</h2>
                            <small>@Model.OccupiedProperties occupied, @Model.VacantProperties vacant</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="dashboard-card metric-card bg-success text-white">
                            <h6 class="card-title">Monthly Revenue</h6>
                            <h2 class="card-text">$@Model.MonthlyRevenue.ToString("N0")</h2>
                            <small>From @Model.OccupiedProperties houses</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="dashboard-card metric-card bg-warning text-white">
                            <h6 class="card-title">Maintenance Requests</h6>
                            <h2 class="card-text">@Model.PendingMaintenanceRequests</h2>
                            <small>Pending requests</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="dashboard-card metric-card bg-info text-white">
                            <h6 class="card-title">Lease Renewals</h6>
                            <h2 class="card-text">@Model.UpcomingLeaseRenewals</h2>
                            <small>Due in next 30 days</small>
                        </div>
                    </div>
                </div>

                <!-- Tables Row -->
                <div class="row g-4">
<!-- Recent Payments -->
<div class="col-md-6">
    <div class="dashboard-card">
        <div class="card-header bg-white">
            <h5 class="mb-0">Recent Payments</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Tenant</th>
                            <th>Property</th>
                            <th>Amount</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.RecentPayments != null && Model.RecentPayments.Any())
                        {
                            foreach (var payment in Model.RecentPayments)
                            {
                                <tr>
                                    <td class="fw-semibold">@payment.TenantName</td>
                                    <td>@payment.PropertyAddress</td>
                                    <td class="fw-semibold text-success">$@payment.Amount.ToString("N2")</td>
                                    <td>@payment.PaymentDate.ToShortDateString()</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">No recent payments available.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


                    <!-- Vacant Properties -->
<div class="col-md-6">
    <div class="dashboard-card">
        <div class="card-header bg-white">
            <h5 class="mb-0">Vacant Houses</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                        <th>House Number</th>
                            <th>Address</th>
                            <th>Monthly Rent</th>
                            <th>Vacant Since</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.VacantHouses != null && Model.VacantHouses.Any())
                        {
                            foreach (var house in Model.VacantHouses)
                            {
                                <tr>
                                <td>@house.HouseNumber
                                    <td>@house.Address</td>
                                    <td>@house.MonthlyRent.ToString("C")</td>
                                    <td>@house.VacantSince?.ToShortDateString()</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center">No vacant houses available.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sidebar = document.getElementById('sidebar');
            const content = document.getElementById('content');
            const sidebarToggle = document.createElement('button');

            sidebarToggle.innerHTML = '<i class="fas fa-bars"></i>';
            sidebarToggle.classList.add('btn', 'btn-outline-light', 'position-fixed', 'top-3', 'start-3', 'd-md-none');
            sidebarToggle.style.zIndex = '1050';
            sidebarToggle.style.margin = '10px';

            sidebarToggle.addEventListener('click', function () {
                sidebar.classList.toggle('active');
            });

            document.body.prepend(sidebarToggle);
        });
    </script>
</body>

</html>