@model RentalManagementSystem.Models.Payment

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Payment Receipt - #@Model.PaymentReference</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            color: #333;
        }
        .receipt-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        .receipt-header {
            text-align: center;
            margin-bottom: 30px;
        }
        .receipt-header h1 {
            color: #3c78d8;
        }
        .receipt-details {
            margin-bottom: 30px;
        }
        .receipt-details table {
            width: 100%;
        }
        .receipt-details th {
            text-align: left;
            padding: 8px;
            width: 40%;
        }
        .receipt-details td {
            padding: 8px;
        }
        .receipt-footer {
            margin-top: 50px;
            text-align: center;
            font-size: 0.9em;
            color: #666;
        }
        .receipt-logo {
            max-width: 150px;
            margin-bottom: 15px;
        }
        .receipt-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 5px;
        }
        .badge {
            padding: 0.5em 0.75em;
        }
        .signature-line {
            border-top: 1px solid #ccc;
            margin-top: 80px;
            padding-top: 5px;
            width: 200px;
            text-align: center;
            margin-bottom: 30px;
        }
        .print-button {
            margin-bottom: 20px;
        }
        @@media print {
            .print-button {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="receipt-container">
        <div class="text-center mb-4 print-button">
            <button class="btn btn-primary" onclick="window.print()">
                <i class="bi bi-printer me-2"></i>Print Receipt
            </button>
        </div>
        
        <div class="receipt-header">
            <img src="/images/logo.png" alt="Company Logo" class="receipt-logo" onerror="this.style.display='none'">
            <h1 class="receipt-title">PAYMENT RECEIPT</h1>
            <p>Receipt #@Model.PaymentReference</p>
        </div>
        
        <div class="card mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="fw-bold mb-3">Payment Details</h5>
                        <table class="table table-sm">
                            <tr>
                                <th>Receipt Number:</th>
                                <td>#@Model.PaymentReference</td>
                            </tr>
                            <tr>
                                <th>Payment Date:</th>
                                <td>@Model.PaymentDate.ToString("MMMM dd, yyyy")</td>
                            </tr>
                            <tr>
                                <th>Amount:</th>
                                <td class="fw-bold">@Model.Amount.ToString("C")</td>
                            </tr>
                            <tr>
                                <th>Payment Method:</th>
                                <td>@Model.PaymentMethod</td>
                            </tr>
                            <tr>
                                <th>Payment Status:</th>
                                <td>
                                    @{
                                        var statusClass = Model.PaymentStatus.ToLower() switch
                                        {
                                            "completed" => "bg-success",
                                            "pending" => "bg-warning",
                                            "failed" => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">@Model.PaymentStatus</span>
                                </td>
                            </tr>
                            <tr>
                                <th>Payment Type:</th>
                                <td>@Model.PaymentType</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h5 class="fw-bold mb-3">Property Details</h5>
                        <table class="table table-sm">
                            <tr>
                                <th>Property:</th>
                                <td>@Model.House?.HouseNumber</td>
                            </tr>
                            <tr>
                                <th>Tenant:</th>
                                <td>@(Model.User?.FullName ?? "N/A")</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="d-flex justify-content-between mt-5">
            <div>
                <div class="signature-line">
                    Landlord Signature
                </div>
            </div>
            <div>
                <div class="signature-line">
                    Tenant Signature
                </div>
            </div>
        </div>
        
        <div class="receipt-footer">
            <p>This is an electronically generated receipt. No signature is required.</p>
            <p>Thank you for your payment.</p>
            <p>Â© @DateTime.Now.Year - Rental Management System</p>
        </div>
    </div>
</body>
</html>