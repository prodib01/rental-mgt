@model RentalManagementSystem.ViewModels.UserDashboardModel

<h1>User Dashboard</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Pending Orders</h5>
                <p class="card-text">@Model.PendingOrders</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Completed Orders</h5>
                <p class="card-text">@Model.CompletedOrders</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Spent</h5>
                <p class="card-text">$@Model.TotalSpent.ToString("N2")</p>
            </div>
        </div>
    </div>
</div>

