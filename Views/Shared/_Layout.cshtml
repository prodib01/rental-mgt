<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rental Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body class="d-flex flex-column min-vh-100">
    <header class="py-3 mb-4 border-bottom">
        <div class="container-fluid d-flex justify-content-between">
            <h1 class="h3">Rental Management System</h1>
            <div>
                <span class="me-3">Hello, @User.Identity.Name</span>
                <a href="/account/logout" class="btn btn-outline-secondary btn-sm">Logout</a>
            </div>
        </div>
    </header>
    <main role="main" class="flex-grow-1">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
