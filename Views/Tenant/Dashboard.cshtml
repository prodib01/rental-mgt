@model RentalManagementSystem.ViewModels.TenantDashboardViewModel

<div class="container-fluid p-0">
    <div class="row g-0">
        <!-- Side Menu -->
        <div class="col-md-3 col-lg-2 bg-light sidebar">
            <div class="position-sticky pt-3 h-100">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                            href="@Url.Action("Index", "TenantDashboard")">
                            <i class="bi bi-speedometer2 me-2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Payments" ? "active" : "")"
                            href="@Url.Action("Payments", "TenantDashboard")">
                            <i class="bi bi-credit-card me-2"></i>
                            Payments
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Maintenance" ? "active" : "")"
                            href="@Url.Action("Maintenance", "TenantDashboard")">
                            <i class="bi bi-tools me-2"></i>
                            Maintenance
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Documents" ? "active" : "")"
                            href="@Url.Action("Documents", "TenantDashboard")">
                            <i class="bi bi-file-earmark-text me-2"></i>
                            Documents
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Profile" ? "active" : "")"
                            href="@Url.Action("Profile", "TenantDashboard")">
                            <i class="bi bi-person me-2"></i>
                            Profile
                        </a>
                    </li>
                </ul>

                <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-3 text-muted">
                    <span>Property Details</span>
                </h6>
                <ul class="nav flex-column mb-2">
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="bi bi-house me-2"></i>
                            @Model.HouseNumber @Model.StreetName
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="bi bi-cash-coin me-2"></i>
                            Rent: $@Model.Rent.ToString("N2")
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 ms-auto col-lg-10 px-4 pt-3">
            <div class="pb-2 mb-3 border-bottom">
                <h2 class="h2">Tenant Dashboard</h2>
            </div>

            <!-- Key Metrics -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <h6 class="card-title">Rent</h6>
                            <h2 class="card-text">$@Model.Rent.ToString("N2")</h2>
                            <small>Monthly Rent for @Model.HouseNumber @Model.StreetName</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pending Bills -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Pending Bills</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Bill Type</th>
                                            <th>Amount</th>
                                            <th>Due Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var bill in Model.PendingBills)
                                        {
                                            <tr>
                                                <td>@bill.BillType</td>
                                                <td>$@bill.Amount.ToString("N2")</td>
                                                <td>@bill.DueDate.ToShortDateString()</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @@media (max-width: 767.98px) {
        .sidebar {
            top: 5rem;
        }
    }

    .sidebar {
        height: 100vh;
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        z-index: 100;
        padding: 48px 0 0;
        box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
        overflow-y: auto;
    }

    .nav-link {
        font-weight: 500;
        color: #333;
    }

    .nav-link.active {
        color: #007bff;
    }
</style>