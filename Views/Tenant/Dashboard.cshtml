@model RentalManagementSystem.ViewModels.TenantDashboardViewModel

@{
    Layout = "_TenantLayout";
    ViewData["Title"] = "Dashboard";
}

<!-- Notice we removed the extra container that was causing overlap -->
<div class="py-4">
    <!-- Dashboard Header -->
    @* <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 mb-0 text-gray-800">Tenant Dashboard</h2>
        <button class="btn btn-primary d-flex align-items-center">
            <i class="fas fa-plus me-2"></i>New Payment
        </button>
    </div> *@

    <!-- Stats Cards Row -->
    <div class="row g-4 mb-4">
        <!-- Rent Card -->
        <div class="col-xl-3 col-md-6">
            <div class="dashboard-card h-100">
                <div class="metric-card">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-muted mb-1">Monthly Rent</h6>
                            <h3 class="mb-2">$@Model.Rent.ToString("N2")</h3>
                            <p class="mb-0 text-muted">
                                <small>@Model.HouseNumber @Model.StreetName</small>
                            </p>
                        </div>
                        <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                            <i class="fas fa-home text-primary fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Next Payment Card -->
        <div class="col-xl-3 col-md-6">
            <div class="dashboard-card h-100">
                <div class="metric-card">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-muted mb-1">Next Payment</h6>
                            <h3 class="mb-2">5 Days</h3>
                            <p class="mb-0 text-success">
                                <i class="fas fa-clock me-1"></i>
                                <small>Due on May 1st</small>
                            </p>
                        </div>
                        <div class="rounded-circle bg-success bg-opacity-10 p-3">
                            <i class="fas fa-calendar text-success fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Maintenance Requests Card -->
        <div class="col-xl-3 col-md-6">
            <div class="dashboard-card h-100">
                <div class="metric-card">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-muted mb-1">Active Requests</h6>
                            <h3 class="mb-2">2</h3>
                            <p class="mb-0 text-warning">
                                <i class="fas fa-tools me-1"></i>
                                <small>In Progress</small>
                            </p>
                        </div>
                        <div class="rounded-circle bg-warning bg-opacity-10 p-3">
                            <i class="fas fa-wrench text-warning fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Documents Card -->
        <div class="col-xl-3 col-md-6">
            <div class="dashboard-card h-100">
                <div class="metric-card">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-muted mb-1">Documents</h6>
                            <h3 class="mb-2">5</h3>
                            <p class="mb-0 text-info">
                                <i class="fas fa-file me-1"></i>
                                <small>Available</small>
                            </p>
                        </div>
                        <div class="rounded-circle bg-info bg-opacity-10 p-3">
                            <i class="fas fa-file-alt text-info fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Bills Section -->
    <div class="row">
        <div class="col-12">
            <div class="dashboard-card">
                <div class="card-header bg-white p-4 border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Pending Bills</h5>
                        <div class="btn-group">
                            <button type="button" class="btn btn-light">
                                <i class="fas fa-filter me-2"></i>Filter
                            </button>
                            <button type="button" class="btn btn-light">
                                <i class="fas fa-download me-2"></i>Export
                            </button>
                        </div>
                    </div>
                </div>
                <div class="p-4">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th scope="col">Bill Type</th>
                                    <th scope="col">Amount</th>
                                    <th scope="col">Due Date</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var bill in Model.PendingBills)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="rounded-circle bg-primary bg-opacity-10 p-2 me-3">
                                                    <i class="fas fa-file-invoice-dollar text-primary"></i>
                                                </div>
                                                @bill.BillType
                                            </div>
                                        </td>
                                        <td>
                                            <strong>$@bill.Amount.ToString("N2")</strong>
                                        </td>
                                        <td>@bill.DueDate.ToShortDateString()</td>
                                        <td>
                                            <span class="badge bg-warning">Pending</span>
                                        </td>
                                        <td>
                                            <button class="btn btn-primary btn-sm">Pay Now</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>